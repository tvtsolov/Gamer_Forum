@{
    ViewData["Title"] = "Register";
}

@model RegisterViewModel

<div class="d-flex justify-content-center">
<div class="card bg-black text-light" style="width: 30rem;">
    <div class="card-header">
        <h3>Create a new account</h3>
    </div>

    <form asp-controller="Auth" asp-action="Register" method="post">
        <div class="card-body" style="padding-bottom: 1px; margin-bottom: 0px;">

            <div class="mb-3">
                <input type="text" asp-for="FirstName" class="form-control-custom" placeholder="First name"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="text" asp-for="LastName" class="form-control-custom" placeholder="Last name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="text" asp-for="Email" class="form-control-custom" placeholder="E-mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <input type="text" asp-for="Username" class="form-control-custom" placeholder="Username"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="password" asp-for="Password" class="form-control-custom" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <hr/>

        <div class="card-footer text-end mb-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-custom4">Cancel</a>
            <input type="submit" value="Register" class="btn btn-custom1" />
        </div>
       
    </form>
</div>
</div>